@model List<Player>

<div>
	<h1 class="display-3">Player List</h1><hr />
</div>

<div class="row mt-3">
	<div class="col">
		<a asp-action="Create" class="btn btn-primary">Create Player</a>
	</div>
</div>

@if(TempData["Result"] != null)
{
	<div class="alert alert-info my-3">@TempData["result"]</div>
}

<div class="row mt-3">
	<div class="col">
		<table class="table table-hover table-sm table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Full Name</th>
					<th>Shoe Size</th>
					<th>Active</th>
					<th>Team</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach(Player item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.FullName</td>
						<td>@item.ShoeSize</td>
						<td>@item.IsActive</td>
						<td>@item.Team</td>
						<td>
							<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
							<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
						</td>
					</tr>
				}
				
			</tbody>
		</table>
	</div>
</div>